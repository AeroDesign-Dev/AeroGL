<Window x:Class="AeroGL.ReportJurnalUmumWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Print Jurnal Umum (Screen)" Height="560" Width="960"
        Background="#15152A" FontFamily="Consolas" FontSize="14"
        WindowStartupLocation="CenterOwner">
    <DockPanel Margin="12">

        <!-- Toolbar: range tanggal + tombol -->
        <Grid DockPanel.Dock="Top" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- label + tanggal -->
                <ColumnDefinition Width="Auto"/>
                <!-- tombol tampilkan + print -->
                <ColumnDefinition Width="*"/>
                <!-- space fleksibel -->
                <ColumnDefinition Width="Auto"/>
                <!-- tombol esc -->
            </Grid.ColumnDefinitions>

            <!-- Bagian tanggal -->
            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <TextBlock Text="Tanggal" Foreground="#9EEAF9" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <DatePicker x:Name="DpFrom" Width="130" Margin="0,0,8,0"/>
                <TextBlock Text="s/d" Foreground="#9EEAF9" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <DatePicker x:Name="DpTo" Width="130" Margin="0,0,12,0"/>
            </StackPanel>

            <!-- Tombol tampilkan + print -->
            <StackPanel Orientation="Horizontal" Grid.Column="1">
                <Button x:Name="BtnShow" Content="Tampilkan (Enter)" Click="BtnShow_Click" Margin="0,0,8,0"/>
                <Button Content="Print (P)" Click="BtnPrint_Click"/>
            </StackPanel>

            <!-- Tombol ESC di kanan -->
            <Button Content="Tutup (Esc)" Click="BtnClose_Click" Grid.Column="3" HorizontalAlignment="Right"/>
        </Grid>

        <!-- Grid hasil -->
        <DataGrid x:Name="GridRows"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          Background="Transparent"
          Foreground="White"
          BorderThickness="0"
          GridLinesVisibility="None"
          HeadersVisibility="Column"
          EnableRowVirtualization="True"
          ScrollViewer.VerticalScrollBarVisibility="Auto"
          ScrollViewer.HorizontalScrollBarVisibility="Auto">

            <!-- Semua resource dalam SATU blok -->
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#334"/>
                    <Setter Property="Foreground" Value="#EAEAEA"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="6,4"/>
                </Style>

                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="#1F2238"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Margin" Value="0,1,0,1"/>
                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#273052"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#3A4A7A"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <Style TargetType="DataGridCell">
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="6,2"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style>

                <!-- Right align helper -->
                <Style x:Key="RightCell" TargetType="{x:Type TextBlock}">
                    <Setter Property="TextAlignment" Value="Right"/>
                    <Setter Property="Padding" Value="6,2"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="No." Binding="{Binding NoTampil}" Width="60"/>
                <DataGridTextColumn Header="Tanggal" Binding="{Binding TanggalTampil}" Width="110"/>
                <DataGridTextColumn Header="No. Transaksi" Binding="{Binding NoTranTampil}" Width="140"/>
                <DataGridTextColumn Header="Keterangan (No Rek — Nama Akun)" Binding="{Binding Ket}" Width="*"/>
                <DataGridTextColumn Header="DEBET"
    Binding="{Binding DebetStr, StringFormat=Rp {0}, TargetNullValue=''}"
    Width="140"
    ElementStyle="{StaticResource RightCell}" />
                <DataGridTextColumn Header="KREDIT"
    Binding="{Binding KreditStr, StringFormat=Rp {0}, TargetNullValue=''}"
    Width="140"
    ElementStyle="{StaticResource RightCell}" />
                <DataGridTextColumn Header="Tipe" Binding="{Binding Type}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>
</Window>
