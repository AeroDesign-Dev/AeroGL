<Application x:Class="AeroGL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Palette -->
        <SolidColorBrush x:Key="BgDark"     Color="#15152A"/>
        <SolidColorBrush x:Key="PanelDark"  Color="#2A2752"/>
        <SolidColorBrush x:Key="PanelMid"   Color="#FF60567C"/>
        <SolidColorBrush x:Key="BrandLight" Color="#FF8E75BB"/>
        <SolidColorBrush x:Key="TextLight"  Color="#FFFFFF"/>
        <SolidColorBrush x:Key="LineCyan"   Color="#29B6F6"/>

        <!-- ScrollBar Dark Custom -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="#FF5C567C"/>
            <Setter Property="Foreground" Value="{StaticResource LineCyan}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid SnapsToDevicePixels="True" Background="{TemplateBinding Background}">
                            <Track x:Name="PART_Track" IsDirectionReversed="true">
                                <!-- track kosong, hanya warna bg -->
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageUpCommand" Background="{StaticResource BrandLight}" Opacity="0"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border x:Name="thumb"
                                                Background="#FF8376A9"
                                                CornerRadius="4" MinHeight="30"/>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="thumb" Property="Background" Value="#90FFFFFF"/>
                                                    </Trigger>
                                                    <Trigger Property="IsDragging" Value="True">
                                                        <Setter TargetName="thumb" Property="Background" Value="#90E0E0E0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageDownCommand" Background="{StaticResource BrandLight}" Opacity="0"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- ListBoxItem (tanpa efek aneh) -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="bd" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter SnapsToDevicePixels="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#FF6F6AA6"/>
                                <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#B26F6AA6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
