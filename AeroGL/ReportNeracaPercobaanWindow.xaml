<Window x:Class="AeroGL.ReportNeracaPercobaanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Neraca Percobaan" Height="768" Width="1024"
        Background="#15152A" FontFamily="Consolas" FontSize="14"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="FlowDocumentScrollViewer">
            <Setter Property="Background" Value="#15152A"/>
            <Setter Property="Foreground" Value="#EAEAEA"/>
        </Style>
    </Window.Resources>

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2A2752" Padding="10" CornerRadius="6" Margin="0,0,0,10">
            <WrapPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Tahun:" Foreground="#9EEAF9" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="cbYear" Width="80" Margin="0,0,15,0" VerticalContentAlignment="Center"/>

                <TextBlock Text="Bulan:" Foreground="#9EEAF9" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="cbMonth" Width="120" Margin="0,0,15,0" VerticalContentAlignment="Center"/>

                <TextBlock Text="Mode:" Foreground="#9EEAF9" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="cbMode" Width="130" Margin="0,0,15,0" SelectedIndex="0" VerticalContentAlignment="Center">
                    <ComboBoxItem Content="B - Bulanan"/>
                    <ComboBoxItem Content="T - YTD (Tahunan)"/>
                </ComboBox>
            </WrapPanel>
        </Border>

        <Border Grid.Row="1" BorderThickness="0" Background="#15152A">
            <FlowDocumentScrollViewer x:Name="docViewer" VerticalScrollBarVisibility="Auto">
                <FlowDocument x:Name="reportDoc" PagePadding="40" Background="#15152A" Foreground="#EAEAEA" FontFamily="Consolas" FontSize="11" ColumnWidth="1000"/>
            </FlowDocumentScrollViewer>
        </Border>

        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="txtStatus" Grid.Column="0" Foreground="#AAA" VerticalAlignment="Center" Text="Siap."/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">

                <Button x:Name="btnShow" Content="Tampilkan (Enter)" Click="BtnShow_Click" 
                        Margin="0,0,8,0" Height="30" Padding="10,0" 
                        Background="#444466" Foreground="White" BorderBrush="#666"/>

                <Button x:Name="btnPrint" Content="Print (P)" Click="BtnPrint_Click" 
                        Margin="0,0,8,0" Height="30" Padding="10,0" 
                        Background="#2D8F6F" Foreground="White" BorderBrush="#2D8F6F"/>

                <Button Content="Tutup (Esc)" Click="BtnClose_Click" 
                        Height="30" Padding="10,0" 
                        Background="#FF6060" Foreground="White" BorderBrush="#FF6060"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>