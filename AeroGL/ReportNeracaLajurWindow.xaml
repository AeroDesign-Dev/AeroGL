<Window x:Class="AeroGL.ReportNeracaLajurWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Print Neraca dan Laba Rugi (Screen)" Height="640" Width="1100"
        Background="#15152A" FontFamily="Consolas" FontSize="14"
        WindowStartupLocation="CenterOwner"
        UseLayoutRounding="True" SnapsToDevicePixels="True"
        xmlns:sysgl="clr-namespace:System.Globalization;assembly=mscorlib"
        Language="id-ID">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2A2752" Padding="10" CornerRadius="6" Margin="0,0,0,10">
            <WrapPanel Orientation="Horizontal" VerticalAlignment="Center">

                <TextBlock Text="Tahun:" Foreground="#9EEAF9" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox x:Name="TxtYear" Width="70" Margin="0,0,15,0" VerticalContentAlignment="Center"/>

                <TextBlock Text="Mode:" Foreground="#9EEAF9" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="CboMode" Width="140" SelectedIndex="0" Margin="0,0,15,0" VerticalContentAlignment="Center">
                    <ComboBoxItem Content="Bulan ini saja"/>
                    <ComboBoxItem Content="YTD s.d. Bulan"/>
                </ComboBox>

                <TextBlock Text="Bulan:" Foreground="#9EEAF9" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="CboMonth" Width="140" SelectedIndex="0" VerticalContentAlignment="Center">
                    <ComboBoxItem Content="1 - Januari"/>
                    <ComboBoxItem Content="2 - Februari"/>
                    <ComboBoxItem Content="3 - Maret"/>
                    <ComboBoxItem Content="4 - April"/>
                    <ComboBoxItem Content="5 - Mei"/>
                    <ComboBoxItem Content="6 - Juni"/>
                    <ComboBoxItem Content="7 - Juli"/>
                    <ComboBoxItem Content="8 - Agustus"/>
                    <ComboBoxItem Content="9 - September"/>
                    <ComboBoxItem Content="10 - Oktober"/>
                    <ComboBoxItem Content="11 - November"/>
                    <ComboBoxItem Content="12 - Desember"/>
                </ComboBox>

            </WrapPanel>
        </Border>

        <Border Grid.Row="1" BorderThickness="0" Background="#15152A">
            <FlowDocumentScrollViewer x:Name="docViewer" VerticalScrollBarVisibility="Auto">
                <FlowDocument x:Name="reportDoc" PagePadding="40" Background="#15152A" Foreground="#EAEAEA" FontFamily="Consolas" FontSize="11" ColumnWidth="1000"/>
            </FlowDocumentScrollViewer>
        </Border>

        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="TxtInfo" Grid.Column="0" Foreground="#AAA" VerticalAlignment="Center" Text="Siap."/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="BtnShow" Content="Tampilkan (Enter)" Click="BtnShow_Click" 
                        Margin="0,0,8,0" Height="30" Padding="10,0"
                        Background="#444466" Foreground="White" BorderThickness="0"/>

                <Button x:Name="BtnPrint" Content="Print (P)" Click="BtnPrint_Click"
                        Margin="0,0,8,0" Height="30" Padding="10,0"
                        Background="#2D8F6F" Foreground="White" BorderThickness="0"/>

                <Button Content="Tutup (Esc)" Click="BtnClose_Click"
                        Height="30" Padding="10,0"
                        Background="#FF6060" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>