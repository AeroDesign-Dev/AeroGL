<Window x:Class="AeroGL.JournalLineDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Baris Jurnal" Height="320" Width="580"
        Background="#15152A" FontFamily="Consolas" FontSize="14"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Rekening + Sisi + Jumlah -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
                <!-- Label nama akun -->
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="No. Rekening (2-seg)" Foreground="#9EEAF9"
             Margin="0,0,8,0" VerticalAlignment="Center"/>

            <!-- TextBox + Popup suggestion -->
            <Grid Grid.Column="1">
                <TextBox x:Name="TxtCode2"/>
                <Popup x:Name="PopSuggest"
           Placement="Bottom"
           StaysOpen="False"
           AllowsTransparency="True"
           Width="{Binding ActualWidth, ElementName=TxtCode2}">
                    <Border Background="#222" BorderBrush="#444" BorderThickness="1">
                        <ListBox x:Name="LstSuggest"
                 MaxHeight="180"
                 MouseDoubleClick="LstSuggest_MouseDoubleClick"
                 SelectionChanged="LstSuggest_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Code3}" Width="110"/>
                                        <TextBlock Text=" — "/>
                                        <TextBlock Text="{Binding Name}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </Popup>
            </Grid>

            <!-- Nama akun (pasif) -->
            <TextBlock Grid.Column="3" x:Name="LblAccName"
             Foreground="#9EEAF9" VerticalAlignment="Center"/>
            
        </Grid>
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="160"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Sisi" Foreground="#9EEAF9"
             Margin="0,0,8,0" VerticalAlignment="Center"/>
            <ComboBox  Grid.Column="1" x:Name="CmbSide" Width="80">
                <ComboBoxItem Content="D" IsSelected="True"/>
                <ComboBoxItem Content="K"/>
            </ComboBox>

            <TextBlock Grid.Column="3" Text="Jumlah" Foreground="#9EEAF9"
             Margin="0,0,8,0" VerticalAlignment="Center"/>
            <TextBox   Grid.Column="4" x:Name="TxtAmount" TextAlignment="Right"/>
        </Grid>

        <!-- Keterangan (3 baris -> digabung CRLF) -->
        <StackPanel Grid.Row="2" Margin="0,0,0,8">
            <TextBlock Text="Keterangan" Foreground="#9EEAF9" Margin="0,0,0,6"/>
            <TextBox x:Name="TxtNarr"
           AcceptsReturn="True"
           VerticalScrollBarVisibility="Auto"
           Height="110"/>
        </StackPanel>

        

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Simpan" Click="BtnSave_Click" Margin="0,0,8,0"/>
            <Button Content="Batal"  Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
