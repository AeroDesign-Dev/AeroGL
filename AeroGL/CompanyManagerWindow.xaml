<Window x:Class="AeroGL.CompanyManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AeroGL — Company Management" Height="600" Width="850"
        Background="#15152A" FontFamily="Consolas" FontSize="14"
        WindowStartupLocation="CenterOwner" SnapsToDevicePixels="True" UseLayoutRounding="True">

    <Window.Resources>
        <Style x:Key="Hdr" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#A3D8FF"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="Lbl" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#9EEAF9"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InputBox" TargetType="Control">
            <Setter Property="Background" Value="#15152A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4444FF"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2A2752" Padding="12" CornerRadius="6" Margin="0,0,0,14">
            <DockPanel LastChildFill="False">
                <TextBlock Text="MANAGEMENT / MULTI-DATABASE" Foreground="#9EEAF9" VerticalAlignment="Center"/>
                <TextBlock Text="AeroGL v2" DockPanel.Dock="Right" Foreground="#B7C9FF" VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <Border Grid.Row="1" Background="#0E0F1D" CornerRadius="8" Padding="2" Margin="0,0,0,14">
            <DataGrid x:Name="GridCompany" AutoGenerateColumns="False" IsReadOnly="True" 
                      Background="Transparent" BorderThickness="0" Foreground="White"
                      RowBackground="Transparent" GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#2A2752" HeadersVisibility="Column" 
                      CanUserAddRows="False" SelectionMode="Single">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#2A2752"/>
                        <Setter Property="Foreground" Value="#A3D8FF"/>
                        <Setter Property="Padding" Value="8"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#4444FF"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="NAMA PERUSAHAAN" Binding="{Binding Name}" Width="250"/>
                    <DataGridTextColumn Header="DATABASE PATH" Binding="{Binding DbPath}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Border Grid.Row="2" Background="#2A2752" Padding="18" CornerRadius="8" Margin="0,0,0,14">
            <StackPanel>
                <TextBlock Text="REGISTRASI / BUAT PERUSAHAAN BARU" Style="{StaticResource Hdr}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="NAMA PT" Style="{StaticResource Lbl}"/>
                    <TextBox x:Name="TxtName" Grid.Column="1" Style="{StaticResource InputBox}"/>

                    <TextBlock Text="LOKASI DB" Grid.Row="2" Style="{StaticResource Lbl}"/>
                    <TextBox x:Name="TxtPath" Grid.Row="2" Grid.Column="1" Style="{StaticResource InputBox}" IsReadOnly="True" Background="#0E0F1D"/>
                    <Button Content="..." Grid.Row="2" Grid.Column="2" Width="40" Margin="8,0,0,0" Click="Browse_Click"
                            Background="#444466" Foreground="White" BorderBrush="#666"/>

                    <TextBlock Text="PASSWORD" Grid.Row="4" Style="{StaticResource Lbl}"/>
                    <PasswordBox x:Name="TxtPassword" Grid.Row="4" Grid.Column="1" Style="{StaticResource InputBox}"/>
                </Grid>
            </StackPanel>
        </Border>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="TxtInfo" Foreground="#AAA" VerticalAlignment="Center" Text="Ready."/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="HAPUS" Click="Delete_Click" Margin="0,0,8,0" Height="32" Padding="15,0"
            Background="#FF6060" Foreground="White" BorderBrush="#FF6060" FontWeight="Bold"/>

                <Button Content="DAFTARKAN" Click="RegisterExisting_Click" Margin="0,0,8,0" Height="32" Padding="15,0"
            Background="#444466" Foreground="White" BorderBrush="#666" FontWeight="Bold"/>

                <Button Content="BUAT DB BARU" Click="CreateNew_Click" Margin="0,0,8,0" Height="32" Padding="15,0"
            Background="#2A2752" Foreground="White" BorderBrush="#4444FF" FontWeight="Bold"/>

                <Button Content="IMPORT DBF" Click="ImportDbf_Click" Margin="0,0,8,0" Height="32" Padding="15,0"
            Background="#2D8F6F" Foreground="White" BorderBrush="#2D8F6F" FontWeight="Bold"/>

                <Button Content="TUTUP" IsCancel="True" Height="32" Padding="15,0"
            Background="#333" Foreground="White" BorderBrush="#555"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>