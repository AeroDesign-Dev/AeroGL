<Window x:Class="AeroGL.CoaEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="COA — Edit" Height="360" Width="560"
        Background="#15152A" FontFamily="Consolas" FontSize="14"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Form -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Code3 -->
                <RowDefinition Height="Auto"/>
                <!-- Name -->
                <RowDefinition Height="Auto"/>
                <!-- Type & Group -->
                <RowDefinition Height="Auto"/>
                <!-- Hint -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>



            <!-- KODE (3 box) + NAMA -->
            <StackPanel Grid.ColumnSpan="2" Margin="0,0,0,12">
                <TextBlock Text="Code3 (xxx.xxx.xxx)" Foreground="#9EEAF9" Margin="0,0,0,6"/>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBox x:Name="TxtCode1" Width="70" MaxLength="3" Margin="0,0,6,0"
                   PreviewTextInput="DigitOnly_PreviewTextInput"
                   TextChanged="CodePart_TextChanged"
                   PreviewKeyDown="CodePart_PreviewKeyDown"/>
                    <TextBlock Text="." Foreground="#EAEAEA" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBox x:Name="TxtCode2" Width="70" MaxLength="3" Margin="0,0,6,0"
                   PreviewTextInput="DigitOnly_PreviewTextInput"
                   TextChanged="CodePart_TextChanged"
                   PreviewKeyDown="CodePart_PreviewKeyDown"/>
                    <TextBlock Text="." Foreground="#EAEAEA" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBox x:Name="TxtCode3" Width="70" MaxLength="3"
                   PreviewTextInput="DigitOnly_PreviewTextInput"
                   TextChanged="CodePart_TextChanged"
                   PreviewKeyDown="CodePart_PreviewKeyDown"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.ColumnSpan="2" Margin="0,0,0,12" Grid.Row="1">
                <TextBlock Text="Name" Foreground="#9EEAF9" Margin="0,0,0,6"/>
                <TextBox x:Name="TxtName"/>
            </StackPanel>

            <!-- TYPE (enum) -->
            <StackPanel Grid.Column="0" Margin="0,0,6,12" Grid.Row="2">
                <TextBlock Text="Type" Foreground="#9EEAF9" Margin="0,0,0,6"/>
                <ComboBox x:Name="CmbType" />
            </StackPanel>

            <!-- GROUP (enum) -->
            <StackPanel Grid.Column="1" Margin="6,0,0,12" Grid.Row="2">
                <TextBlock Text="Group" Foreground="#9EEAF9" Margin="0,0,0,6"/>
                <ComboBox x:Name="CmbGrp" />
            </StackPanel>

            <!-- HINT -->
            <Border Grid.ColumnSpan="2" Grid.Row="3" Background="#1F2238" CornerRadius="6" Padding="10">
                <TextBlock Foreground="#9EEAF9">
          <Run Text="Type: Debit (0), Kredit (1)"/><LineBreak/>
          <Run Text="Group: Aktiva (1), Hutang (2), Modal (3), Pendapatan (4), Biaya (5)"/>
                </TextBlock>
            </Border>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Simpan" Click="BtnSave_Click" Margin="0,0,8,0"/>
            <Button Content="Batal"  Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
