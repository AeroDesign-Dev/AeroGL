<Window x:Class="AeroGL.MonthYearPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pilih Periode Closing" Width="350"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow"
        Background="#15152A" FontFamily="Consolas">
    <StackPanel Margin="20">
        <TextBlock Text="PILIH PERIODE AKHIR BULAN:" Foreground="#9EEAF9" Margin="0,0,0,15" FontWeight="Bold"/>

        <Grid Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Bulan:" Foreground="White" VerticalAlignment="Center"/>
            <ComboBox x:Name="ComboMonth" Grid.Column="1" Height="30" VerticalContentAlignment="Center">
                <ComboBoxItem Content="01 - Januari" Tag="1"/>
                <ComboBoxItem Content="02 - Februari" Tag="2"/>
                <ComboBoxItem Content="03 - Maret" Tag="3"/>
                <ComboBoxItem Content="04 - April" Tag="4"/>
                <ComboBoxItem Content="05 - Mei" Tag="5"/>
                <ComboBoxItem Content="06 - Juni" Tag="6"/>
                <ComboBoxItem Content="07 - Juli" Tag="7"/>
                <ComboBoxItem Content="08 - Agustus" Tag="8"/>
                <ComboBoxItem Content="09 - September" Tag="9"/>
                <ComboBoxItem Content="10 - Oktober" Tag="10"/>
                <ComboBoxItem Content="11 - November" Tag="11"/>
            </ComboBox>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Tahun:" Foreground="White" VerticalAlignment="Center"/>
            <TextBox x:Name="TxtYear" Grid.Column="1" Height="30" Padding="5" 
                     Background="#2A2752" Foreground="White" BorderBrush="#4444FF" 
                     HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="PROSES" Width="90" Height="30" Margin="0,0,10,0" Click="Ok_Click" IsDefault="True" Background="#2D8F6F" Foreground="White" FontWeight="Bold"/>
            <Button Content="BATAL" Width="90" Height="30" IsCancel="True" Background="#444466" Foreground="White"/>
        </StackPanel>
    </StackPanel>
</Window>