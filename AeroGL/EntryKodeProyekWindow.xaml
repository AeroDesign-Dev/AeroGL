<Window x:Class="AeroGL.EntryKodeProyekWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AeroGL — Entry Kode Proyek" Height="320" Width="640"
        Background="{StaticResource BgDark}"
        FontFamily="Consolas" FontSize="16"
        WindowStartupLocation="CenterOwner"
        UseLayoutRounding="True" SnapsToDevicePixels="True"
        Loaded="Window_Loaded" KeyDown="Window_KeyDown">

    <Grid Margin="16">
        <!-- header kecil -->
        <DockPanel LastChildFill="False" Margin="0,0,0,8">
            <TextBlock Text="Entry Kode Proyek" DockPanel.Dock="Left" Foreground="{StaticResource BrandLight}"/>
            <TextBlock Text="GL" DockPanel.Dock="Right" Foreground="{StaticResource BrandLight}"/>
        </DockPanel>

        <!-- frame -->
        <Border Background="{StaticResource PanelDark}" BorderThickness="1"
                CornerRadius="10" Padding="12" Margin="0,28,0,48" BorderBrush="#FFFFBB00">
            <Border Background="#FF5C567C" CornerRadius="8" Padding="20" Width="560" HorizontalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Kode Proyek" Grid.Row="0" Grid.Column="0" Margin="0,2,12,0"
                               Foreground="{StaticResource TextLight}"/>
                    <TextBox x:Name="TxtKode" Grid.Row="0" Grid.Column="1" Height="30" Padding="6"
         IsReadOnly="True" Background="#15152A" Foreground="#AAA" BorderBrush="#4444FF"/>

                    <TextBlock Text="Nama Proyek" Grid.Row="2" Grid.Column="0" Margin="0,2,12,0"
                               Foreground="{StaticResource TextLight}"/>
                    <TextBox x:Name="TxtNama" Grid.Row="2" Grid.Column="1" Height="30" Padding="6"/>

                    <TextBlock Text="Password Proyek" Grid.Row="4" Grid.Column="0" Margin="0,2,12,0"
                               Foreground="{StaticResource TextLight}"/>
                    <PasswordBox x:Name="TxtPass" Grid.Row="4" Grid.Column="1" Height="30" Padding="6"/>
                </Grid>
            </Border>
        </Border>

        <!-- bottom bar -->
        <Grid VerticalAlignment="Bottom" Margin="0,0,0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="TxtStatus" Grid.Column="0" VerticalAlignment="Center"
               Foreground="{StaticResource TextLight}" TextTrimming="CharacterEllipsis" 
               FontStyle="Italic" FontSize="12"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="Simpan" Width="110" Margin="0,0,8,0" Click="BtnSave_Click"
                Background="#2D8F6F" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
                <Button Content="Tutup"  Width="110" Click="BtnClose_Click"
                Background="#FF6060" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
